{
  "name": "secsync",
  "version": "0.1.0",
  "main": "src/index",
  "types": "src/index",
  "scripts": {
    "build": "rimraf -rf ./dist && pnpm build:xstate-types && tsc -p tsconfig.build.json",
    "prepublishOnly": "pnpm run build",
    "test": "jest",
    "ts:check": "pnpm tsc --noEmit",
    "lint": "echo \"No linting configured\"",
    "build:xstate-types": "xstate typegen \"./**/*.ts?(x)\""
  },
  "dependencies": {
    "canonicalize": "^2.0.0",
    "libsodium-wrappers": "^0.7.11",
    "xstate": "^4.37.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.1.1",
    "@types/libsodium-wrappers": "^0.7.10",
    "@types/ws": "^8.5.5",
    "@xstate/cli": "^0.5.2",
    "jest": "^29.1.1",
    "mock-socket": "^9.2.1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/config/jestTestSetup.ts"
    ]
  }
}
